<div class="container">

  <h3 class="title">Usuarios</h3>
  <label class="switch float-right">
    <input type="checkbox" id="maintenance-checkbox">
    <span class="slider round"></span>
  </label>
  <h4 class="title float-right">Modo mantenimiento</h4>
  <div class="page-content">
    <table>
      <thead>
      <tr>
        <th>ID</th>
        <th>IDENTIFICACION</th>
        <th>NOMBRES</th>
        <th>APELLIDOS</th>
        <th>GENERO</th>
        <th>TELEFONO</th>
        <th>ROL</th>
        <th>E-MAIL</th>
        <th>ESTADO</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user|
      %>

        <tr>
          <td>
            <%= user.id %>
          </td>

          <td>
            <%= user.identification %>
          </td>

          <td>
            <%= user.firtsname %>
          </td>

          <td>
            <%= user.lastname %>
          </td>

          <td>
            <%= user.gender %>
          </td>

          <td>
            <%= user.phone %>
          </td>

          <td>
            <%= user.role %>
          </td>

          <td>
            <%= user.email %>
          </td>

          <td>
            <%= user.state %>
          </td>

          <td>
            <%= link_to "Ver", user %>
          </td>

          <td>
            <%= link_to "Editar", edit_user_path(user) %>
          </td>

          <td>
            <%= link_to "Eliminar", user, method: :delete, data: {confirm: "Esta seguro de eliminar este usuario?"} %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to "Crear usuario", new_user_path, class: 'button' %>
  </div>
</div>
