<h1>Nuevo Usuario</h1>
<%= form_with scope:
  :user, url: users_path, local: true do
  |form| %>

<p>
  <%= form.label :firtsname %>
  <br>
  <%= form.text_field :firtsname %>
</p>

  <p>
    <%= form.label :lastname %>
    <br>
    <%= form.text_field :lastname %>
  </p>

  <p>
    <%= form.label :gender %>
    <br>
    <%= form.text_field :gender %>
  </p>

  <p>
    <%= form.label :phone %>
    <br>
    <%= form.text_field :phone %>
  </p>

  <p>
    <%= form.label :role %>
    <br>
    <%= form.text_field :role %>
  </p>

  <p>
    <%= form.label :identification %>
    <br>
    <%= form.text_field :identification %>
  </p>

  <p>
    <%= form.label :email %>
    <br>
    <%= form.text_field :email %>
  </p>


  <p>
    <%= form.label :password %>
    <br>
    <%= form.text_field :password %>
  </p>

<p>
  <%= form.submit %>
</p>

<% end %>