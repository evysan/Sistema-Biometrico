<div class="container">
  <h3 class="title">Editar Usuario</h3>
  <div class="page-content">
    <%= form_with(model: @user, local: true) do |form| %>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@user.errors.count, "error") %> prohibited
            this user from being saved:
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.label :identification, 'Identificacion' %>
      <%= form.text_field :identification %>

      <%= form.label :firtsname, 'Nombres' %>
      <%= form.text_field :firtsname %>

      <%= form.label :lastname, 'Apellidos' %>
      <%= form.text_field :lastname %>

      <%= form.label :gender, 'Genero' %>
      <select name="user[gender]" id="user_gender">
        <option value="F">Femenino</option>
        <option value="M">Masculino</option>
      </select>

      <%= form.label :phone, 'Telefono' %>
      <%= form.text_field :phone %>

      <%= form.label :role, 'Rol' %>
      <select name="user[role]" id="user_role">
        <option value="docente">Docente</option>
        <option value="admin">Administrador</option>
      </select>

      <%= form.label :email, 'Correo' %>
      <%= form.text_field :email %>

      <%= form.label :password, 'Contrasena', id: 'user_password_label' %>
      <%= form.text_field :password, type: 'password' %>

      <%= form.submit 'Guardar usuario' %> |
      <%= link_to 'Atras', users_path, class: 'button button-outline' %>
    <% end %>
  </div>
</div>