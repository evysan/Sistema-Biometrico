<h1>LOGIN</h1>

  <% flash.each do |msg_type, msg| %>
  <p>
    <%= msg %>
  </p>
  <% end %>

<%= form_with scope:
    :login, url: login_path, local: true do
    |form| %>

  <p>
    <%= form.label :identification %>
    <br>
    <%= form.text_field :identification %>
  </p>

  <p>
    <%= form.label :password %>
    <br>
    <%= form.text_field :password %>
  </p>


  <p>
    <%= form.submit %>
  </p>

<% end %>


